<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="006-create-exchange-rate-history-table" author="developer">
        <createTable tableName="exchange_rate_history">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false"/>
            </column>
            <column name="currency_code" type="VARCHAR(3)">
                <constraints nullable="false"/>
            </column>
            <column name="currency_name" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
            <column name="exchange_rate" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="krw_amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="foreign_amount" type="DECIMAL(15,2)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="memo" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
            <column name="is_krw_first" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <!-- 외래키 제약조건 추가 -->
        <addForeignKeyConstraint baseTableName="exchange_rate_history"
                               baseColumnNames="user_id"
                               constraintName="fk_exchange_rate_history_user"
                               referencedTableName="users"
                               referencedColumnNames="id"
                               onDelete="CASCADE"/>
        
        <rollback>
            <dropTable tableName="exchange_rate_history"/>
        </rollback>
    </changeSet>

</databaseChangeLog> 