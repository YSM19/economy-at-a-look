<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="019" author="admin">
        <addColumn tableName="users">
            <column name="is_suspended" type="BOOLEAN" defaultValueBoolean="false">
                <constraints nullable="false"/>
            </column>
            <column name="suspended_until" type="DATETIME"/>
            <column name="suspension_reason" type="VARCHAR(500)"/>
            <column name="suspended_by" type="VARCHAR(100)"/>
            <column name="suspended_at" type="DATETIME"/>
        </addColumn>
    </changeSet>

</databaseChangeLog> 