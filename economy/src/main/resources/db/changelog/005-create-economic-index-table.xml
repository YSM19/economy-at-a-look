<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="005-create-economic-index-table" author="developer">
        <createTable tableName="economic_index">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="DATE">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="index_value" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="index_status" type="VARCHAR(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
            <dropTable tableName="economic_index"/>
        </rollback>
    </changeSet>

</databaseChangeLog> 