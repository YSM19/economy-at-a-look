<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="018-add-original-data-to-reports" author="system">
        <comment>Add original data columns to reports table for storing content before deletion</comment>
        
        <!-- 원본 제목 컬럼 추가 -->
        <addColumn tableName="reports">
            <column name="original_title" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- 원본 내용 컬럼 추가 -->
        <addColumn tableName="reports">
            <column name="original_content" type="TEXT">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
        <!-- 원본 작성자 컬럼 추가 -->
        <addColumn tableName="reports">
            <column name="original_author" type="VARCHAR(255)">
                <constraints nullable="true"/>
            </column>
        </addColumn>
        
    </changeSet>

</databaseChangeLog> 