<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                   http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-latest.xsd">

    <changeSet id="004-create-consumer-price-index-table" author="developer">
        <createTable tableName="consumer_price_index">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="date" type="VARCHAR(6)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="cpi_value" type="DECIMAL(10,2)">
                <constraints nullable="false"/>
            </column>
            <column name="monthly_change" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
            <column name="annual_change" type="DECIMAL(5,2)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        
        <rollback>
            <dropTable tableName="consumer_price_index"/>
        </rollback>
    </changeSet>

</databaseChangeLog> 