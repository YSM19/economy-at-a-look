<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet id="015" author="system">
        <createTable tableName="post_bookmarks">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_post_bookmarks_user" references="users(id)"/>
            </column>
            <column name="post_id" type="BIGINT">
                <constraints nullable="false" foreignKeyName="fk_post_bookmarks_post" references="posts(id)"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addUniqueConstraint tableName="post_bookmarks" columnNames="user_id, post_id" constraintName="uk_post_bookmarks_user_post"/>
        
        <createIndex tableName="post_bookmarks" indexName="idx_post_bookmarks_user">
            <column name="user_id"/>
        </createIndex>
        
        <createIndex tableName="post_bookmarks" indexName="idx_post_bookmarks_post">
            <column name="post_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog> 